{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}


{% block body %}
	{% for product in products %}
		<div>
			<img src="/assets/upload/products/{{product.image}}" alt="{{product.image}}" width="200px" height="200px">
			<p>{{product.price/100}}</p>
			<a href="{{ path("product_details", {'id': product.id})}}">SHOW</a>
		</div>
	{% endfor %}
{% endblock %}
